source 'https://rubygems.org'

gem 'rails', '~> 4.1.0'

# Mongo
gem 'mongoid', github: 'mongoid/mongoid'
gem 'bson_ext'

# Logic
gem 'rinruby'
gem 'httparty'

# Assets
gem 'sass-rails'
gem 'coffee-rails'
gem 'uglifier'
gem 'haml-rails'

# Frontend
gem 'jquery-rails'
gem 'jquery-ui-rails'
gem 'highcharts-rails'

# Monitoring
gem 'newrelic_rpm'

# Caching
gem 'rack-cache'
gem 'memcachier'
gem 'dalli'

group :development  do
  gem 'quiet_assets'
end

group :production do
  gem 'rails_12factor'
end
